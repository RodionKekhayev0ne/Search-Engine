<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "LinkedPurchaseList" table = "linkedpurchaselist">

        <meta attribute = "class-description">
            This class contains the purchase detail.
        </meta>

        <id></id>
        <property name = "studentId" column = "student_id" type = "Integer"/>
        <property name = "courseId" column = "course_id" type = "Integer"/>
        <property name = "subscriptionDate" column = "subscription_date" type = "Date"/>
        <property name = "price" column = "price" type = "int"/>

    </class>
</hibernate-mapping>
